# GABAY Production .htaccess Configuration
# Place this file in the root gabay/ directory

# Enable RewriteEngine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /gabay/
    
    # Force HTTPS (SSL) - DISABLED FOR LOCAL DEVELOPMENT
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Redirect www to non-www (optional - adjust if needed)
    # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
</IfModule>

# Prevent Directory Listing
Options -Indexes

# Protect Sensitive Files (but allow API access to required files internally)
# Note: connect_db.php and auth_guard.php are included via PHP, not accessed directly via HTTP
<FilesMatch "^(connect_db\.php|auth_guard\.php|auth_helper\.js)$">
    <IfModule mod_authz_core.c>
        # Allow local includes but deny direct HTTP access
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Protect Database and Log Files
<FilesMatch "\.(sql|log|bak)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Allow markdown files for documentation (optional - remove if you want to block them)
# <FilesMatch "\.md$">
#     <IfModule mod_authz_core.c>
#         Require all denied
#     </IfModule>
# </FilesMatch>

# Protect Configuration Files (but not PHP includes needed by APIs)
<FilesMatch "\.(config|dist|inc|ini|lock|sh)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Protect logs directory
<IfModule mod_rewrite.c>
    RewriteRule ^logs/ - [F,L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Enable XSS protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Referrer policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Remove server signature (if possible)
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# PHP Security Settings (if allowed)
<IfModule mod_php7.c>
    # Enable error display for development (DISABLE IN PRODUCTION)
    php_flag display_errors On
    php_flag log_errors On
    php_value error_log logs/php_errors.log
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value max_execution_time 300
    php_value memory_limit 256M
</IfModule>

# File Upload Protection - Prevent execution of uploaded files
<FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
    <IfModule mod_authz_core.c>
        <If "%{REQUEST_URI} =~ m#^/gabay/(QR|Pano|animated_hotspot_icons)/#">
            Require all denied
        </If>
    </IfModule>
</FilesMatch>

# Compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>

# Browser Caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# Custom Error Pages (create these files if needed)
# ErrorDocument 404 /gabay/404.php
# ErrorDocument 403 /gabay/403.php
# ErrorDocument 500 /gabay/500.php
